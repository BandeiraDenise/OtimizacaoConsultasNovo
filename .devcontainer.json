{
  "name": "Oracle 11g Dev Container",
  "dockerComposeFile": "docker-compose.yml",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "extensions": [
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "oracle.oracledevtools"  
  ],
  "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "oracle.oracledevtools.connections": [
            {
                "name": "XE",
                "username": "system",
                "password": "oracle",
                "connectString": "localhost:1521/XE"
            }
        ]
  },
  "postCreateCommand": "docker exec -it $(docker ps -qf 'name=oracle-xe') /bin/bash -c 'source /opt/oracle/scripts/init.sh && sqlplus system/oracle@localhost:1521/XE'"
}


